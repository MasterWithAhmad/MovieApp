@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-primary text-white rounded p-5">
        <h1 class="display-3 fw-bold">Welcome to Movie App!</h1>
        <p class="lead">Your ultimate destination for managing and discovering movies.</p>
        <hr class="my-4 bg-light">
        <a class="btn btn-light btn-lg" href="#" role="button"><i class="bi bi-play-circle"></i> Get Started</a>
    </div>

    <!-- Features Section -->
    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-body text-primary">
                    <i class="bi bi-film fs-2"></i>
                    <h4 class="card-title mt-3">Manage Movies</h4>
                    <p class="card-text">Add, edit, and delete movie records effortlessly with our intuitive interface.</p>
                </div>
                <div class="card-footer border-0 bg-light">
                    <a href="#" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-body text-success">
                    <i class="bi bi-search fs-2"></i>
                    <h4 class="card-title mt-3">Discover New Movies</h4>
                    <p class="card-text">Explore a diverse range of movies from various genres and find your next favorite.</p>
                </div>
                <div class="card-footer border-0 bg-light">
                    <a href="#" class="btn btn-outline-success">Explore Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-body text-danger">
                    <i class="bi bi-bar-chart-line fs-2"></i>
                    <h4 class="card-title mt-3">Track Your Favorites</h4>
                    <p class="card-text">Keep track of your favorite movies and their ratings all in one place.</p>
                </div>
                <div class="card-footer border-0 bg-light">
                    <a href="#" class="btn btn-outline-danger">Track Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="row mt-5">
        <div class="col-md-8 mx-auto text-center">
            <h2 class="mb-4">About Movie App</h2>
            <p class="lead">MovieApp is designed for movie enthusiasts and administrators alike. Our platform simplifies managing your movie database and offers an intuitive interface for discovering and tracking your favorite films.</p>
            <a class="btn btn-outline-primary btn-lg" href="#" role="button"><i class="bi bi-info-circle"></i> Learn More</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}